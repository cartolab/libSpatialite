<?xml version="1.0" encoding="ISO-8859-1"?>
<plugin-config>
	<depends plugin-name="com.iver.cit.gvsig"/>
	<libraries library-dir="lib"/>
	<resourceBundle name="text"/>
	<extensions>
		<extension class-name="es.udc.cartolab.gvsig.spatiaLiteConnector.DBConnectionExtension" description="Connect DB" active="true">
			<tool-bar name="DBConnection">
				<action-tool icon="DBConnect" tooltip="connectToDB"
					action-command="DBConnect" position="1"/>
			</tool-bar>
			<menu text="data_base_menu/connectToDB"
				icon="DBConnect"
				action-command="DBConnect"
				position="1"/> 
		</extension>
		<extension class-name="es.udc.cartolab.gvsig.spatiaLiteConnector.CloseSessionExtension" description="Close connection" active="true">
			<tool-bar name="DBConnection">
				<action-tool icon="DBClose" tooltip="close_session"
					action-command="CLOSE" position="2"/>
			</tool-bar>
			<menu text="data_base_menu/close_session"
				icon="DBClose"
				action-command="CLOSE"
				position="1090"/> 
		</extension>
	</extensions>
</plugin-config>